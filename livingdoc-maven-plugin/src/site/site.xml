<?xml version="1.0" encoding="ISO-8859-1"?>

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Living Documentation Maven Plugin"
         xmlns="http://maven.apache.org/DECORATION/1.0.0"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

    <bannerLeft>
        <name>LivingDocumentation Plugin</name>
        <href>#</href>
    </bannerLeft>
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>false</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>
            <gitHub>
                <projectId>LivingDocumentation/livingdoc-maven-plugin</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

    <body>
        <menu name="Overview">
            <item name="Introduction" href="intro.html"/>
            <item name="Usage" href="usage.html"/>
            <item name="Glossary" href="glossary.html"/>
            <item name="WordCloud" href="wordcloud.html"/>
